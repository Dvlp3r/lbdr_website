.banner

  .banner-body
    - @banners.each do |banner|
      .banner-content style='background-image: url("#{banner.photo(:big)}");'

  .logo-information
    .col-md-10.slider_leftpart

      .col-md-3.text-left

      .col-md-9.text-left

        - @banners.each do |banner|

          .banner-description.hide
            h2 =banner.title.html_safe unless banner.nil?
            p =banner.description.html_safe unless banner.nil?

    .col-md-2.text-left

  .arrow
    .arrow-click
      .arrow-in

.container-fluid.sectors
  h1 We have companies in 9 different sectors
  
  .container

    .col-md-12.visible-md-block.visible-lg-block
      -@sectors.each_with_index do |sector, i|
        
        - if((i) % 2 == 0)
          =link_to sector do
              .row
                .col-md-3.col-ms-3
                  .sector-image
                    .styled-div style='background-image: url("#{sector.sector_photo(:thumb)}");'
                      h3.sector-name = sector.name
                .col-md-9.col-ms-9
                  p =sanitize(sector.description, :tags=>[]).truncate(240, :separator => " ").html_safe
          end

        - else
          =link_to sector do
              .row
                .col-md-9.col-ms-9
                  p =sanitize(sector.description, :tags=>[]).truncate(240, :separator => " ").html_safe
                .col-md-3.col-ms-3
                  .sector-image
                    .styled-div style='background-image: url("#{sector.sector_photo(:thumb)}");'
                      h3.sector-name =sector.name
          end

      =link_to new_investment_page_path do
          .row
            .col-md-3.col-ms-3
              .sector-image
                .styled-div style='background-image: url("#{@new_investment.photo(:thumb)}");'
                  h3.sector-name = @new_investment.title
            .col-md-9.col-ms-9
              p =sanitize(@new_investment.description, :tags=>[]).truncate(240, :separator => " ").html_safe
      end

    .col-md-12.visible-sm-block.visible-xs-block
      -@sectors.each_with_index do |sector, i|
        
        =link_to sector do
            .row
              .col-md-3.col-ms-3
                .sector-image
                  .styled-div style='background-image: url("#{sector.sector_photo(:thumb)}");'
                    h3.sector-name = sector.name
              .col-md-9.col-ms-9
                p =sanitize(sector.description, :tags=>[]).truncate(240, :separator => " ").html_safe
        end

      =link_to new_investment_page_path do
          .row
            .col-md-3.col-ms-3
              .sector-image
                .styled-div style='background-image: url("#{@new_investment.photo(:thumb)}");'
                  h3.sector-name = @new_investment.title
            .col-md-9.col-ms-9
              p =sanitize(@new_investment.description, :tags=>[]).truncate(240, :separator => " ").html_safe
      end
